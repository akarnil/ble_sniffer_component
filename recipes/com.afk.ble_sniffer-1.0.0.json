{
  "RecipeFormatVersion": "2020-01-25",
  "ComponentName": "com.afk.ble_sniffer",
  "ComponentVersion": "1.0.0",
  "ComponentDescription": "My led control component.",
  "ComponentPublisher": "Alen Karnil",
  "ComponentConfiguration": {
    "DefaultConfiguration": {
      "InferenceInterval": 15,
      "accessControl": {
        "aws.greengrass.ipc.pubsub": {
          "com.afk.ble_sniffer:pubsub:1": {
            "policyDescription": "Allows access to subscribe to mypi/button.",
            "operations": [
              "aws.greengrass#PublishToTopic"
            ],
            "resources": [
              "iotc/rpt/d2gg/sub"
            ]
          }
        }
      }
    }
  },
  "Manifests": [
    {
      "Platform": {
        "os": "linux"
      },
      "Lifecycle": {
        "Install": {
          "RequiresPrivilege": true,
          "script": "python3 -m pip install --user awsiotsdk"
        },
        "Run": {
          "RequiresPrivilege": true,
          "script": "python3 -u {artifacts:path}/sniffer.py '{configuration:/InferenceInterval}'"
        }
      },
      "Artifacts": [
        {
          "Uri": "s3://root-260030673750/584af730-2854-4a77-8f3b-ca1696401e08/gg-artifacts/sniffer.py"
        },
        {
          "Uri": "s3://root-260030673750/584af730-2854-4a77-8f3b-ca1696401e08/gg-artifacts/bl_scanner.py"
        }
      ]
    }
  ]
}
